{
  "name": "reactcourseproject",
  "version": "1.0.0",
  "description": "React Course Project with GraphQL",
  "main": "index.js",
  "scripts": {
    "client-install": "cd client && npm install",
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "json:server": "json-server --watch db.json"
  },
  "author": "Joseph",
  "devDependencies": {
    "nodemon": "^1.17.5"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^3.5.1",
    "express": "^4.16.2",
    "express-graphql": "^0.6.12",
    "graphql-yoga": "^1.14.10",
    "json-server": "^0.14.0",
    "lodash": "^4.17.10",
    "mongoose": "^5.1.6",
    "standard": "^11.0.1"
  }
}
